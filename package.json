{
  "name": "e-wallet",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Julio L. Muller",
  "scripts": {
    "tsn": "ts-node-dev --require tsconfig-paths/register",
    "start": "node build/index.js",
    "dev:db": "docker-compose up -d && npm run db:migrate",
    "dev:node": "npm run tsn -- src/index.ts --clear --respawn --transpile-only --ignore node_modules",
    "dev": "npm run dev:db && npm run db:migrate && npm run dev:node",
    "build": "rm -rf build/ && tsc -p .",
    "typeorm": "npm run tsn -- node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm -- migration:run",
    "db:seed": "npm run tsn -- src/database/seeds/",
    "db:migrate:seed": "npm run db:migrate && npm run db:seed",
    "db:reset": "npm run typeorm -- schema:drop && npm run db:migrate",
    "db:reset:seed": "npm run db:reset && npm run db:seed",
    "test": "cross-env NODE_ENV=test jest -i"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^5.5.3",
    "handlebars": "^4.7.7",
    "http-status-codes": "^2.1.4",
    "lodash.snakecase": "^4.1.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "pg": "^8.6.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "~0.2.34",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/lodash.snakecase": "^4.1.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.17.3",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-lacussoft": "^2.0.3",
    "jest": "^27.0.6",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
